<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SubsTracker.ViewModels"
             xmlns:model="clr-namespace:SubsTracker.Models"
             x:Class="SubsTracker.Views.NotificationPage"
             Title="Notifications"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="60, *">

        <Grid Grid.Row="0" Padding="15,0">
            <ImageButton Source="back.png"
                 Command="{Binding GoBackCommand}"
                 HeightRequest="40" WidthRequest="40"
                 Padding="6"
                 HorizontalOptions="Start" VerticalOptions="Center"
                 BackgroundColor="Transparent"/>

            <Label Text="Notifications"
               FontSize="18" FontAttributes="Bold"
               HorizontalOptions="Center" VerticalOptions="Center"
               InputTransparent="True"
               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

            <Button Text="Clear"
                    Command="{Binding ClearAllCommand}"
                    TextColor="Red"
                    BackgroundColor="Transparent"
                    HorizontalOptions="End" VerticalOptions="Center"/>
        </Grid>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Notifications}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Notification">
                    <Frame Margin="0,5" Padding="15" CornerRadius="10" HasShadow="True" BorderColor="Transparent">
                        <StackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16" TextColor="#333"/>
                            <Label Text="{Binding Message}" FontSize="14" TextColor="#666" Margin="0,5,0,0"/>
                            <Label Text="{Binding Timestamp, StringFormat='{0:MMM dd, HH:mm}'}" 
                                   FontSize="12" TextColor="#999" HorizontalOptions="End"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="No new notifications" TextColor="Gray" HorizontalTextAlignment="Center"/>
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>