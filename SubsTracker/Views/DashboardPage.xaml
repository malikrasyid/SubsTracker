<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SubsTracker.ViewModels"
             xmlns:models="clr-namespace:SubsTracker.Models"
             x:Class="SubsTracker.Views.DashboardPage"
             Title="Dashboard"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#121212}">

    <Grid RowDefinitions="60, *">

        <Grid Grid.Row="0" Padding="15,0">

            <Label Text="Dashboard"
               FontSize="18"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               InputTransparent="True"
               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

            <ImageButton Source="bell.png"
                 HeightRequest="40"
                 Command="{Binding GoToNotificationsCommand}"
                 WidthRequest="40"
                 Padding="6"
                 HorizontalOptions="End"
                 VerticalOptions="Center"
                 BackgroundColor="Transparent"/>
        </Grid>
        <Grid Grid.Row="1">
            <RefreshView Command="{Binding LoadSubscriptionsCommand}" 
                     IsRefreshing="{Binding IsBusy}">

                <CollectionView ItemsSource="{Binding Subscriptions}"
                            SelectionMode="None">

                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="1" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Subscription">

                            <Frame Margin="15, 0, 15, 10" Padding="15" CornerRadius="12" HasShadow="True" BorderColor="Transparent" BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">

                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DashboardViewModel}}, Path=GoToDetailsCommand}"
                                    CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>

                                <Grid ColumnDefinitions="Auto, *, Auto">

                                    <Frame Grid.Column="0"
                                       HeightRequest="45" WidthRequest="45"
                                       CornerRadius="23"
                                       BackgroundColor="{Binding HexColor}"
                                       Padding="0"
                                       HasShadow="False"
                                       Margin="0,0,15,0"
                                       VerticalOptions="Center">
                                        <Label Text="{Binding Initial}"
                                           TextColor="White"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                    </Frame>

                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">

                                        <Label Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" 
                                           LineBreakMode="TailTruncation"/>

                                        <Label Text="{Binding Description}" 
                                           FontSize="12" 
                                           TextColor="Gray" 
                                           LineBreakMode="TailTruncation"/>

                                        <Label Text="{Binding DaysUntilDue, StringFormat='Due in {0} days'}" 
                                           FontSize="11" 
                                           TextColor="{StaticResource Primary}" 
                                           Margin="0,2,0,0"/>
                                    </VerticalStackLayout>

                                    <Label Grid.Column="2" 
                                       Text="{Binding Price, StringFormat='${0:F2}'}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       VerticalOptions="Center" 
                                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                                </Grid>
                            </Frame>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <CollectionView.EmptyView>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                            <Label Text="ðŸ“…" FontSize="60" HorizontalOptions="Center"/>
                            <Label Text="No subscriptions yet" 
                               FontSize="18" FontAttributes="Bold" TextColor="Gray" HorizontalOptions="Center"/>
                            <Label Text="Tap the + button to start tracking" 
                               FontSize="14" TextColor="Gray" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>

                </CollectionView>
            </RefreshView>

            <ImageButton Source ="plus.png"
                Command="{Binding GoToAddSubscriptionCommand}"
                BackgroundColor="{StaticResource Primary}"
                CornerRadius="20"
                WidthRequest="50"
                HeightRequest="50"
                Padding="10"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="12"
                Shadow="{Shadow Brush=Black, Offset='4,4', Opacity=0.4}" />
        </Grid>
    </Grid>
</ContentPage>