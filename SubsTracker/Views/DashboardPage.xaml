<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SubsTracker.ViewModels"
             xmlns:models="clr-namespace:SubsTracker.Models"
             x:Class="SubsTracker.Views.DashboardPage"
             Title="Dashboard"
             BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#121212}">

    <Grid>
        <RefreshView Command="{Binding LoadSubscriptionsCommand}" 
                     IsRefreshing="{Binding IsBusy}">

            <CollectionView ItemsSource="{Binding Subscriptions}"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="1" VerticalItemSpacing="10" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Subscription">

                        <Frame Margin="10,5" Padding="15" CornerRadius="15" HasShadow="True" BorderColor="Transparent">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DashboardViewModel}}, Path=GoToDetailsCommand}"
                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>

                            <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto">

                                <Frame Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                       HeightRequest="50" WidthRequest="50"
                       CornerRadius="25"
                       BackgroundColor="{Binding HexColor}"
                       Padding="0"
                       HasShadow="False"
                       Margin="0,0,15,0">
                                    <Label Text="{Binding Initial}"
                           TextColor="White"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                                </Frame>

                                <Label Grid.Row="0" Grid.Column="1" 
                       Text="{Binding Name}" 
                       FontSize="18" 
                       FontAttributes="Bold" />

                                <Label Grid.Row="1" Grid.Column="1" 
                       Text="{Binding NextPaymentDate, StringFormat='Due: {0:MMM dd}'}" 
                       TextColor="Gray" FontSize="12"/>

                                <Label Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" 
                       Text="{Binding Cost, StringFormat='${0:F2}'}" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       VerticalOptions="Center" 
                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                            </Grid>
                        </Frame>

                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="No subscriptions yet." TextColor="Gray" HorizontalOptions="Center"/>
                        <Label Text="Tap + to add one!" TextColor="Gray" HorizontalOptions="Center"/>
                    </StackLayout>
                </CollectionView.EmptyView>

            </CollectionView>
        </RefreshView>

        <Button Text="+"
                Command="{Binding GoToAddSubscriptionCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="30"
                WidthRequest="60"
                HeightRequest="60"
                FontSize="30"
                Padding="0"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="20"
                Shadow="{Shadow Brush=Black, Offset='2,2', Opacity=0.5}" />
    </Grid>
</ContentPage>